@{
    ViewBag.Title = "Giriş Ekranı";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Styles {
    <link href="~/Content/loginindex.css" rel="stylesheet" />
}

<div class="container">
    <div class="login-box text-center">
        <h2><i class="bi bi-box-arrow-in-right me-2"></i>Giriş Ekranı</h2>

        @if (TempData["LogoutMessage"] != null)
        {
            <div class="alert alert-success text-center mt-3 shadow-sm">
                <i class="bi bi-check-circle me-1"></i> @TempData["LogoutMessage"]
            </div>
        }

        @if (TempData["ErrorMessage"] != null)
        {
            <div class="alert alert-danger text-center mt-3 shadow-sm">
                <i class="bi bi-exclamation-triangle me-1"></i> @TempData["ErrorMessage"]
            </div>
        }

        <div class="d-grid gap-3 mt-4">
            @Html.ActionLink("🎓 Öğrenci Girişi", "Student", "Login", null, new { @class = "btn btn-custom btn-student" })
            @Html.ActionLink("🧑‍🏫 Danışman Girişi", "Advisor", "Login", null, new { @class = "btn btn-custom btn-advisor" })
            @Html.ActionLink("🛡️ Admin Girişi", "Admin", "Login", null, new { @class = "btn btn-custom btn-admin" })
        </div>
    </div>
</div>

<script>
    // Geri tuşunu engelle
    history.pushState(null, null, location.href);
    window.onpopstate = function () {
        history.go(1);
    };
</script>
