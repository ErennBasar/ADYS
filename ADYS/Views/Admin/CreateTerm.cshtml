@model ADYS.Models.Term

@{
    ViewBag.Title = Model.TermId == 0 ? "Yeni Dönem Ekle" : "Dönem Güncelle";
}

<h2>@ViewBag.Title</h2>

@using (Html.BeginForm())
{
    @Html.HiddenFor(m => m.TermId)

    <div class="form-group">
        @Html.LabelFor(m => m.TermName)
        @Html.TextBoxFor(m => m.TermName, new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.CourseSelectionStart, "Seçim Başlangıç Tarihi")
        @Html.TextBoxFor(m => m.CourseSelectionStart, "{0:yyyy-MM-dd}", new { @class = "form-control", type = "date" })
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.CourseSelectionEnd, "Seçim Bitiş Tarihi")
        @Html.TextBoxFor(m => m.CourseSelectionEnd, "{0:yyyy-MM-dd}", new { @class = "form-control", type = "date" })
    </div>

    <div class="form-check">
        @Html.CheckBoxFor(m => m.IsActive, new { @class = "form-check-input" })
        @Html.LabelFor(m => m.IsActive, new { @class = "form-check-label" })
    </div>

    <button type="submit" class="btn btn-success mt-3">Kaydet</button>
}

