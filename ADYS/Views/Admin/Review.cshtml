@*@model List<ADYS.ViewModels.ReviewCourseViewModel>*@
@model List<MyApiProject.DTOs.ReviewCourseDto>

@{
    ViewBag.Title = "Ders Onay Paneli";
    int toplamAkts = Model.Sum(m => m.AKTS);
    bool hepsiOnayli = Model.All(m => m.IsApproved == true);
    int studentId = ViewBag.StudentId != null ? (int)ViewBag.StudentId : 0;
}

@if (hepsiOnayli)
{
    <div class="alert alert-success">✅ Tüm dersler onaylandı.</div>
}
else
{
    <div class="alert alert-warning">⏳ Bazı dersler henüz onaylanmadı.</div>
}

<div class="col-12">
    <div class="card glass-card " color: #ccc;">
        <div class="card-header text-white">
            <h2 class="text-center m-0">
                @ViewBag.StudentName - Ders Seçimleri
            </h2>
            <p><strong>Toplam Seçilen AKTS:</strong> @toplamAkts</p>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table id="selectCourses" class="display custom-datatable">
                    <thead>
                        <tr>
                            <th>Ders</th>
                            <th>AKTS</th>
                            <th>Onay Durumu</th>
                            <th>İşlem</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            string durum = item.IsApproved == true ? "✔ Onaylandı"
                                           : item.IsApproved == false ? "✖ Reddedildi"
                                           : "⏳ Onayda";
                            string durumClass = item.IsApproved == true ? "text-success"
                                             : item.IsApproved == false ? "text-danger"
                                             : "text-warning";

                            <tr id="row-@item.CourseSelectionId">
                                <td>@item.CourseName</td>
                                <td>@item.AKTS</td>
                                <td class="@durumClass fw-bold">@durum</td>
                                <td>
                                    <button class="btn btn-sm btn-success approve-btn" data-id="@item.CourseSelectionId" data-approve="true">Onayla</button>
                                    <button class="btn btn-sm btn-danger approve-btn" data-id="@item.CourseSelectionId" data-approve="false">Reddet</button>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        window.addEventListener("pageshow", function (event) {
            if (event.persisted || (window.performance && window.performance.navigation.type === 2)) {
                window.location.reload();
            }
        });
    </script>
    <script>
        $(function () {
            $(".approve-btn").click(function () {
                const id = $(this).data("id");
                const approve = $(this).data("approve");

                $.ajax({
                    type: 'POST',
                    url: `https://localhost:44335/api/AdvisorApi/UpdateApproval?courseSelectionId=${id}&approve=${approve}`,
                    contentType: 'application/json',
                    //data: {
                    //    courseSelectionId: id,
                    //    approve: approve
                    //},
                    success: function (res) {
                        if (res.success) {
                            location.reload();
                        } else {
                            alert("İşlem başarısız.");
                        }
                    },
                    error: function () {
                        alert("Sunucu hatası oluştu.");
                    }
                });
            });
        });
    </script>
    <script>

        $(document).ready(function () {
            $('#selectCourses').DataTable({
                paging: true,
                searching: true,
                ordering: true,
                language: {
                    "url": "/Scripts/i18n/tr.json"
                }
            })
        });
    </script>
}