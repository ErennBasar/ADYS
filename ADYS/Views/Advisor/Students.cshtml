@model List<ADYS.Models.User>


<div class="col-12">
    <div class="card glass-card ">
        <div class="card-header text-white">
          
            <h2>Danışman Öğrencileri</h2>

        </div>
        <div class="card-body">
            <div class="table-responsive">

                <table id="advisorStudentsSelectedCourse" class="display custom-datatable">
                    <thead>
                        <tr>
                            <th>Ad Soyad</th>
                            <th>İşlem</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var student in Model)
                        {
                            <tr>
                                <td>@student.UserName</td>
                                <td>
                                    @Html.ActionLink("Dersleri İncele", "Review", "Advisor", new { studentId = student.UserId }, new { @class = "btn btn-info btn-sm" })
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('#advisorStudentsSelectedCourse').DataTable({
                paging: true,
                searching: true,
                ordering: true,
            });
        });
    </script>
}
