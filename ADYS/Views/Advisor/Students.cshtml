@model List<ADYS.Models.Student>

<h2>Danışman Öğrencileri</h2>

<table class="table">
    <thead>
        <tr>
            <th>Ad Soyad</th>
            <th>İşlem</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var student in Model)
        {
            <tr>
                <td>@student.FullName</td>
                <td>
                    @Html.ActionLink("Dersleri İncele", "Review", "Advisor", new { studentId = student.StudentId }, new { @class = "btn btn-primary" })
                </td>
            </tr>
        }
    </tbody>
</table>
