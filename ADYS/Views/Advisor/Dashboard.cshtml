@model List<ADYS.Models.User>

@{
    ViewBag.Title = "Danışman Paneli";
}

<div class="col-12">
    <div class="card glass-card ">
        <div class="card-header text-white" >
            <h2>@ViewBag.AdvisorName</h2>

            <p>Danışman öğrencilerinizin listesi:</p>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table id="advisorStudents" class="display custom-datatable">
                    <thead>
                        <tr>
                            <th>Öğrenci Adı</th>
                            <th>İşlem</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var student in Model)
                        {
                            <tr>
                                <td>@student.UserName</td>
                                <td>
                                    @Html.ActionLink("Dersleri İncele", "Review", "Advisor", new { studentId = student.UserId }, new { @class = "btn btn-sm" })
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

    @section Scripts {
        <script>
            $(document).ready(function () {
                $('#advisorStudents').DataTable({
                    paging: true,
                    searching: true,
                    ordering: true,
                    language: {
                        "url": "/Scripts/i18n/tr.json"
                    }
                });
            });
        </script>
    }
